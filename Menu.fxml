<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-image: url('background.jpg'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <ImageView fitHeight="277.0" fitWidth="829.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@MCBoulderDash.png" />
                    </image>
                </ImageView>
                <Button onAction="#newGamePressed" prefHeight="60.0" prefWidth="244.0" text="PLAY">
                    <font>
                        <Font name="Arial Black" size="24.0" />
                    </font>
                </Button>
                <Button onAction="#endlessPressed" prefHeight="60.0" prefWidth="244.0" text="ENDLESS">
                    <font>
                        <Font name="Arial Black" size="24.0" />
                    </font>
                </Button>
            <Button layoutX="303.0" layoutY="221.0" onAction="#exitGamePressed" prefHeight="60.0" prefWidth="244.0" text="EXIT GAME">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
            </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
